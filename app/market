    <script>
        document.addEventListener('DOMContentLoaded', () => {
            let trendChart, sentimentChart;
            const analyzeBtn = document.getElementById('analyze-btn');
            const analyzeBtnText = document.getElementById('analyze-btn-text');
            const analyzeBtnLoader = document.getElementById('analyze-btn-loader');
            const radarRefreshBtn = document.getElementById('radar-refresh-btn');

            const initialState = document.getElementById('initial-state');
            const loadingState = document.getElementById('loading-state');
            const errorState = document.getElementById('error-state');
            const resultsContainer = document.getElementById('results-container');

            // --- Chart Rendering Functions (Unchanged) ---
            function renderTrendChart(days) {
                if (trendChart) trendChart.destroy();
                const labels = Array.from({length: days}, (_, i) => { const d = new Date(); d.setDate(d.getDate() - (days - 1 - i)); return d; });
                const data = Array.from({length: days}, () => Math.floor(Math.random() * 60) + 20);
                const ctx = document.getElementById('trendChart').getContext('2d');
                const gradient = ctx.createLinearGradient(0, 0, 0, 300);
                gradient.addColorStop(0, 'rgba(79, 70, 229, 0.4)');
                gradient.addColorStop(1, 'rgba(79, 70, 229, 0)');
                trendChart = new Chart(ctx, { type: 'line', data: { labels: labels, datasets: [{ label: '搜尋熱度', data: data, borderColor: '#4f46e5', borderWidth: 3, pointRadius: 0, tension: 0.4, fill: true, backgroundColor: gradient }] }, options: { responsive: true, maintainAspectRatio: false, scales: { x: { type: 'time', time: { unit: 'week', tooltipFormat: 'MMM d' }, grid: { display: false } }, y: { beginAtZero: true, max: 100 } }, plugins: { legend: { display: false } }, interaction: { intersect: false, mode: 'index' } } });
            }

            function renderSentimentChart(sentimentData) {
                if (sentimentChart) sentimentChart.destroy();
                const ctx = document.getElementById('sentimentChart').getContext('2d');
                sentimentChart = new Chart(ctx, { type: 'doughnut', data: { labels: ['正面', '中立', '負面'], datasets: [{ data: [sentimentData.positive, sentimentData.neutral, sentimentData.negative], backgroundColor: ['#10b981', '#64748b', '#ef4444'], borderWidth: 0, hoverOffset: 8 }] }, options: { responsive: true, maintainAspectRatio: false, cutout: '70%', plugins: { legend: { position: 'bottom', labels: { padding: 15, usePointStyle: true, pointStyle: 'circle' } }, tooltip: { callbacks: { label: (c) => `${c.label}: ${c.parsed}%` } } } } });
            }

            function renderWordCloud(wordCloudData) {
                const canvas = document.getElementById('wordcloudCanvas');
                const container = document.getElementById('wordcloud-container');
                canvas.width = container.offsetWidth;
                canvas.height = container.offsetHeight;
                WordCloud(canvas, { list: wordCloudData, gridSize: Math.round(16 * canvas.width / 1024), weightFactor: (size) => (size / 60) * (canvas.width / 300) * 25, fontFamily: 'Inter, Noto Sans TC, sans-serif', color: (word, weight) => (weight > 50 ? '#4f46e5' : '#3b82f6'), backgroundColor: 'transparent' });
            }
            
            function renderMarketingAngles(angles) {
                const container = document.getElementById('marketing-angles-content');
                container.innerHTML = angles.map(angle => `
                    <div class="bg-slate-50 p-4 rounded-lg">
                        <p class="font-semibold text-indigo-700">${angle.title}</p>
                        <p class="text-sm text-slate-600 mt-1">${angle.content}</p>
                    </div>
                `).join('');
            }

            function renderRadar(items) {
                const container = document.getElementById('radar-content');
                container.innerHTML = items.map(item => `
                    <div class="flex items-start gap-4 p-3 rounded-lg hover:bg-slate-50">
                        <img src="${item.imageUrl}" alt="${item.name}" class="w-16 h-16 rounded-lg object-cover">
                        <div>
                            <p class="font-semibold text-slate-800">${item.name}</p>
                            <p class="text-xs text-slate-500">${item.reason}</p>
                            <a href="#" class="text-xs font-bold text-indigo-600 hover:underline mt-1 inline-block">立即分析 &rarr;</a>
                        </div>
                    </div>
                `).join('');
            }

            // ✅ 步驟 2: 改造核心 AI 呼叫函式
            async function callAI(prompt) {
                const ai_response = await puter.ai.chat(prompt, {
                    model: 'google/gemini-flash-1.5',
                    temperature: 0.2
                });

                const jsonString = ai_response?.message?.content;
                if (!jsonString) {
                    throw new Error("AI 回應為空，無法解析。");
                }
                
                try {
                    return JSON.parse(jsonString);
                } catch (parseError) {
                    console.error("無法將 AI 回應解析為 JSON:", jsonString);
                    throw new Error("AI 回應的格式不是有效的 JSON，請再試一次。");
                }
            }

            async function handleAnalysis() {
                const keyword = document.getElementById('keyword-input').value;
                if (!keyword) return;

                // UI Loading state
                initialState.classList.add('hidden');
                resultsContainer.classList.add('hidden');
                errorState.classList.add('hidden');
                loadingState.classList.remove('hidden');
                analyzeBtn.disabled = true;
                analyzeBtnText.classList.add('hidden');
                analyzeBtnLoader.classList.remove('hidden');

                // ✅ 步驟 3: 強化 Prompt，將 Schema 轉為文字範例
                const prompt = `
                    您是「避錯寶」的資深市場分析師。請針對台灣市場，分析關鍵字「${keyword}」。
                    您的回覆「必須」是純粹的 JSON 格式，不包含任何額外文字或 markdown 符號。

                    請回傳符合以下結構的 JSON 物件:
                    {
                      "trendAnalysis": "一句關於此關鍵字趨勢的簡短總結",
                      "sentiment": { "positive": number, "neutral": number, "negative": number },
                      "wordCloudData": [["熱門詞", 權重_number], ...],
                      "marketingAngles": [{ "title": "行銷標題", "content": "行銷內容" }, ...]
                    }
                `;
                
                try {
                    const aiData = await callAI(prompt);
                    
                    // Update UI with AI data
                    document.getElementById('trend-analysis-text').textContent = aiData.trendAnalysis;
                    renderSentimentChart(aiData.sentiment);
                    renderWordCloud(aiData.wordCloudData);
                    renderMarketingAngles(aiData.marketingAngles);
                    
                    const days = document.getElementById('time-range').value;
                    renderTrendChart(parseInt(days)); // Keep mock trend chart for visual
                    
                    loadingState.classList.add('hidden');
                    resultsContainer.classList.remove('hidden');

                } catch (error) {
                    console.error("Analysis failed:", error);
                    loadingState.classList.add('hidden');
                    errorState.textContent = `分析失敗: ${error.message}`;
                    errorState.classList.remove('hidden');
                } finally {
                    analyzeBtn.disabled = false;
                    analyzeBtnText.classList.remove('hidden');
                    analyzeBtnLoader.classList.add('hidden');
                }
            }

            async function handleRadarRefresh() {
                const radarContent = document.getElementById('radar-content');
                radarContent.innerHTML = `<div class="flex justify-center items-center h-full"><div class="w-6 h-6 rounded-full animate-spin border-2 border-dashed border-indigo-500 border-t-transparent"></div></div>`;
                
                // ✅ 步驟 3: 強化 Prompt，將 Schema 轉為文字範例
                const prompt = `
                    您是「避錯寶」的AI新品雷達。請推薦3個近期在台灣年輕人市場中，具有爆款潛力的「美妝保養」或「潮流鞋款」商品。
                    您的回覆「必須」是純粹的 JSON 陣列格式，不包含任何額外文字或 markdown 符號。

                    請回傳符合以下結構的 JSON 陣列:
                    [
                      {
                        "name": "商品名稱",
                        "reason": "推薦理由",
                        "imageUrl": "https://images.pexels.com/..."
                      },
                      ...
                    ]
                `;
                
                try {
                    const radarItems = await callAI(prompt);
                    renderRadar(radarItems);
                } catch (error) {
                    console.error("Radar refresh failed:", error);
                    radarContent.innerHTML = `<p class="text-xs text-red-500">無法載入建議。</p>`;
                }
            }

            // Event Listeners
            analyzeBtn.addEventListener('click', handleAnalysis);
            radarRefreshBtn.addEventListener('click', handleRadarRefresh);

            // Initial load
            handleRadarRefresh();
        });
    </script>

</body>
</html>
